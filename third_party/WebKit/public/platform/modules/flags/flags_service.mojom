module blink.mojom;

import "url/mojo/origin.mojom";

enum FlagMode {
  SHARED,
  EXCLUSIVE
};

// An opaque handle passed from the browser process to a child process to reflect a
// held flag. The flag is released when the handle is dropped.
interface FlagHandle {};

interface FlagRequest {
  Granted(FlagHandle flag_handle);
};

interface FlagsService {
  RequestFlag(url.mojom.Origin origin, array<string> scope, FlagMode mode, FlagRequest request);
};
