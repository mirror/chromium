module blink.mojom;

enum OomInterventionStatus {
  // The intervention is inactive and renderer is running normally.
  INACTIVE,
  // The intervention is active and renderer is paused.
  ACTIVE,
};

// Renderer interface for OOM intervention.
interface OomIntervention {
  // Called when NearOomMonitor detects near-OOM situation.
  OnNearOomDetected() => (OomInterventionStatus status);

  // Called when the intervention is declined. Only called after
  // OnNearOomDetected().
  OnInterventionDeclined() => (OomInterventionStatus status);
};
