{
    "extensions": [
        {
            "type": "action",
            "actionId": "layers.reset-view",
            "helpDescription": "Reset view",
            "helpSection": "Layers Panel",
            "bindings": [
                {
                    "shortcut": "0"
                }
            ]
        },
        {
            "type": "action",
            "actionId": "layers.pan-mode",
            "helpDescription": "Switch to pan mode",
            "helpSection": "Layers Panel",
            "bindings": [
                {
                    "shortcut": "x"
                }
            ]
        },
        {
            "type": "action",
            "actionId": "layers.rotate-mode",
            "helpDescription": "Switch to rotate mode",
            "helpSection": "Layers Panel",
            "bindings": [
                {
                    "shortcut": "v"
                }
            ]
        },
        {
            "type": "action",
            "actionId": "layers.toggle-pan-rotate",
            "helpDescription": "Temporarily toggle pan/rotate mode while held",
            "helpSection": "Layers Panel",
            "bindings": [
                {
                    "shortcut": "Shift"
                }
            ]
        },
        {
            "type": "action",
            "actionId": "layers.zoom-in",
            "helpSection": "Layers Panel",
            "helpDescription": "Zoom in",
            "bindings": [
                {
                    "shortcut": "Shift+Plus NumpadPlus"
                }
            ]
        },
        {
            "type": "action",
            "actionId": "layers.zoom-out",
            "helpSection": "Layers Panel",
            "helpDescription": "Zoom out",
            "bindings": [
                {
                    "shortcut": "Shift+Minus NumpadMinus"
                }
            ]
        },
        {
            "type": "action",
            "actionId": "layers.up",
            "helpSection": "Layers Panel",
            "helpDescription": "Pan or rotate up/down",
            "bindings": [
                {
                    "shortcut": "Up w"
                }
            ]
        },
        {
            "type": "action",
            "actionId": "layers.down",
            "helpSection": "Layers Panel",
            "helpDescription": "Pan or rotate up/down",
            "bindings": [
                {
                    "shortcut": "Down s"
                }
            ]
        },
        {
            "type": "action",
            "actionId": "layers.left",
            "helpSection": "Layers Panel",
            "helpDescription": "Pan or rotate left/right",
            "bindings": [
                {
                    "shortcut": "Left a"
                }
            ]
        },
        {
            "type": "action",
            "actionId": "layers.right",
            "helpSection": "Layers Panel",
            "helpDescription": "Pan or rotate left/right",
            "bindings": [
                {
                    "shortcut": "Right d"
                }
            ]
        }
    ],
    "dependencies": [
        "components",
        "sdk",
        "timeline_model",
        "ui",
        "perf_ui"
    ],
    "scripts": [
        "LayerDetailsView.js",
        "LayerTreeOutline.js",
        "LayerViewHost.js",
        "Layers3DView.js",
        "PaintProfilerView.js",
        "TransformController.js"
    ],
    "resources": [
        "layers3DView.css",
        "paintProfiler.css",
        "layerDetailsView.css"
    ]
}
