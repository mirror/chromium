typedef (WebGLRenderingContext or WebGL2RenderingContext) VRWebGLRenderingContext;

// https://w3c.github.io/webvr/spec/latest/#vrdevice-interface
[
    OriginTrialEnabled=WebVR
] interface VRDevice : EventTarget {
  readonly attribute DOMString deviceName;
  readonly attribute boolean isExternal;

  attribute EventHandler onactivate;
  attribute EventHandler ondeactivate;

  [CallWith=ScriptState] Promise supportsSession([PermissiveDictionaryConversion] optional VRSessionCreateParametersInit parameters);
  [CallWith=ScriptState] Promise requestSession([PermissiveDictionaryConversion] optional VRSessionCreateParametersInit parameters);

  [CallWith=ScriptState] Promise ensureContextCompatibility(VRWebGLRenderingContext context);
};
