 (load-file "/Users/<username>/coding-style.el")

;; some functions
(defun my-compile ()
  "Select current line, push onto kill ring."
  (interactive)
  (save-excursion
    (let ((d-name default-directory))
    (save-some-buffers t)
    (cd "/Users/<username>/Build")
    (compile "make")
    (cd d-name))))

(global-set-key "\C-x\\" 'my-compile)

(setq auto-mode-alist (cons '("\\.h$" . c++-mode) auto-mode-alist))
(add-to-list 'auto-mode-alist '("SConstruct$" . python-mode))

(define-key minibuffer-local-filename-completion-map
 " " 'minibuffer-complete-word)

