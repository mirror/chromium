import("//build/config/features.gni")
import("//testing/libfuzzer/fuzzer_test.gni")

source_set("cbor") {
  sources = [
    "cbor_reader.cc",
    "cbor_reader.h",
    "cbor_values.cc",
    "cbor_values.h",
    "cbor_writer.cc",
    "cbor_writer.h",
  ]

  deps = [
    "//base",
    "//content/common",
    "//content/public/common:common_sources",
  ]
}

fuzzer_test("cbor_reader_fuzzer") {
  sources = [
    "cbor_reader_fuzzer.cc",
  ]
  deps = [
    ":cbor",
  ]
  libfuzzer_options = [ "max_len=1024" ]
}
