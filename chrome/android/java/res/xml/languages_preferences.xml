<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chrome="http://schemas.android.com/apk/res-auto">

    <org.chromium.chrome.browser.preferences.languages.LanguageListPreference
      android:key="accept_languages"
      android:layout="@layout/custom_preference"
      android:widgetLayout="@layout/accept_languages_list" />

    <org.chromium.chrome.browser.preferences.ChromeSwitchPreference
        android:key="translate_switch"
        android:summaryOn="@string/language_offer_translate_on"
        android:summaryOff="@string/language_offer_translate_off"
        chrome:drawDivider="false" />

</PreferenceScreen>
