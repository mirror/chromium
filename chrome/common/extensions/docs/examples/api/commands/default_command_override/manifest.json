{
  "name": "Tab Flipper",
  "description": "Press Ctrl+Shift+Right or Ctrl+Shift+Left (Command+Shift+Right or Command+Shift+Left on a Mac) to flip through window tabs",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "tabFlipper16.png",
    "default_title": "Press Ctrl(Win)/Command(Mac) + Left or Right to Flip Tabs"
  },
  "commands": {
    "flip-tabs-forward": {
      "suggested_key": {
        "default": "Ctrl+Right",
        "mac": "Command+Right"
      },
      "description": "Flip tabs forward"
    },
    "flip-tabs-backwards": {
      "suggested_key": {
        "default": "Ctrl+Left",
        "mac": "Command+Left"
      },
      "description": "Flip tabs backwards"
    }
  },
  "icons": {
    "16": "tabFlipper16.png",
    "32": "tabFlipper32.png",
    "48": "tabFlipper48.png",
    "128": "tabFlipper128.png"
  },
  "permissions": [
      "activeTab"
    ]
}
