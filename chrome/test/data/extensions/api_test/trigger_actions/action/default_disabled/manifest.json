{
  "name": "An action that makes the active tab's background red",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs", "http://*/*"
  ],
  "action": {
      "name": "Make this page red",
      "default_icon": "icon.png",
      "default_state": "disabled"
  }
}
