import("//testing/test.gni")

static_library("handler") {
  sources = [
    "crash_report_upload_thread.cc",
    "crash_report_upload_thread.h",
    "handler_main.cc",
    "handler_main.h",
    "mac/crash_report_exception_handler.cc",
    "mac/crash_report_exception_handler.h",
    "mac/exception_handler_server.cc",
    "mac/exception_handler_server.h",
    "mac/file_limit_annotation.cc",
    "mac/file_limit_annotation.h",
    "prune_crash_reports_thread.cc",
    "prune_crash_reports_thread.h",
    "user_stream_data_source.cc",
    "user_stream_data_source.h",
    "win/crash_report_exception_handler.cc",
    "win/crash_report_exception_handler.h",
  ]

  include_dirs = [ ".." ]

  deps = [
    "../compat",
    "../minidump",
    "../snapshot",
    "../tools:tool_support",
    "//base",
  ]

  if (is_win) {
    cflags = [ "/wd4201" ]
  }
}

source_set("handler_test") {
  testonly = true

  if (is_win) {
    deps = [
      ":handler",
      "../client",
      "../compat",
      "../test",
      "../util",
      "//base",
      "//testing/gtest",
    ]

    data_deps = [
      ":crashpad_handler_test_extended_handler",
    ]

    include_dirs = [ ".." ]

    sources = [
      "crashpad_handler_test.cc",
    ]
  }
}

executable("crashpad_handler") {
  sources = [
    "main.cc",
  ]

  include_dirs = [ ".." ]

  deps = [
    ":handler",
    "../compat",
    "//base",
    "//build/win:default_exe_manifest",
  ]

  if (is_mac && is_component_build) {
    # The handler is in Chromium.app/Contents/Versions/X/Chromium Framework.framework/Versions/A/Helpers/
    # so set rpath up to the base.
    ldflags = [
      "-rpath",
      "@loader_path/../../../../../../../..",
    ]
  }

  if (is_win) {
    configs -= [
      "//build/config/win:console",
    ]
    configs += [
      "//build/config/win:windowed",
    ]
  }
}

executable("crashpad_handler_test_extended_handler") {
  testonly = true

  deps = [
    ":handler",
    "../compat",
    "../minidump:minidump_test_lib",
    "../tools:tool_support",
    "//base",
  ]

  include_dirs = [ ".." ]

  sources = [
    "crashpad_handler_test_extended_handler.cc",
  ]
}

if (is_win) {
  executable("crashpad_handler_com") {
    # Avoid .exp, .ilk, and .lib file collisions with crashpad_handler.exe by
    # having this target produce crashpad_handler_com.com. Donâ€™t use this target
    # directly. Instead, use crashpad_handler_console.
    output_extension = "com"

    deps = [
      ":handler",
      "../compat",
      "//base",
      "//build/win:default_exe_manifest",
    ]

    include_dirs = [ ".." ]

    sources = [
      "main.cc",
    ]
  }

  copy("crashpad_handler_console") {
    deps = [ ":crashpad_handler_com" ]
    sources = [ "$root_out_dir/crashpad_handler_com.com" ]
    outputs = [ "$root_out_dir/crashpad_handler.com" ]
  }

}
