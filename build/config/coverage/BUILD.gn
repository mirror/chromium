import("//build/config/coverage/coverage.gni")

config("default_coverage") {
  if (use_clang_coverage) {
    cflags = [
      "-fprofile-instr-generate",
      "-fcoverage-mapping",
      "-fno-use-cxa-atexit",
      "-mllvm",
      "-limited-coverage-experimental=true",
    ]
    ldflags = [ "-fprofile-instr-generate" ]
  }
}
