import("//build/config/linux/dconf/dconf.gni")
import("//build/config/linux/pkg_config.gni")

assert(!is_chromeos && use_dconf)

buildflag_header("dconf_flags") {
  header = "dconf_flags.h"
  flags = [ "USE_DCONF=$use_dconf" ]
}

pkg_config("dconf") {
  packages = [ "dconf" ]
}
