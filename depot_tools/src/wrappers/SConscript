Import('env')

if env['RELEASE_ARCH'] in ('linux', 'mac'):
  env.Substitute('$WRAPPER_DIR/README', 'README')
  env.Substitute('$WRAPPER_DIR/gcl', 'posix/gcl')
  env.Substitute('$WRAPPER_DIR/gclient', 'posix/gclient')
  env.Substitute('$WRAPPER_DIR/hammer', 'posix/hammer')
  env.Substitute('$WRAPPER_DIR/revert', 'posix/revert')
  env.Substitute('$WRAPPER_DIR/bootstrap/update.sh',
                 'posix/bootstrap/update.sh')
elif env['RELEASE_ARCH'] in ('win',):
  env.Substitute('$WRAPPER_DIR/README', 'README')
  env.Substitute('$WRAPPER_DIR/gcl', 'win/gcl')
  env.Substitute('$WRAPPER_DIR/gcl.bat', 'win/gcl.bat')
  env.Substitute('$WRAPPER_DIR/gclient', 'win/gclient')
  env.Substitute('$WRAPPER_DIR/gclient.bat', 'win/gclient.bat')
  env.Substitute('$WRAPPER_DIR/hammer', 'win/hammer')
  env.Substitute('$WRAPPER_DIR/hammer.bat', 'win/hammer.bat')
  env.Substitute('$WRAPPER_DIR/svn', 'win/svn')
  env.Substitute('$WRAPPER_DIR/svn.bat', 'win/svn.bat')
  env.Substitute('$WRAPPER_DIR/revert', 'win/revert')
  env.Substitute('$WRAPPER_DIR/revert.bat', 'win/revert.bat')
  env.Substitute('$WRAPPER_DIR/bootstrap/update.bat',
                 'win/bootstrap/update.bat')
  env.Substitute('$WRAPPER_DIR/bootstrap/update.sh',
                 'win/bootstrap/update.sh')
  env.CopySubversionTree('$WRAPPER_DIR/bootstrap/svn', '../win/svn')
else:
  import sys
  sys.stderr.write('Unknown RELEASE_ARCH %s\n' % repr(env['RELEASE_ARCH']))
