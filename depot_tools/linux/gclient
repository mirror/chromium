#!/bin/sh

base_dir=$(dirname "$0")

if [ "X$DEPOT_TOOLS_UPDATE" != "X0" -a -e "$base_dir/.svn" ]
then
  # Update the "release" subdirectory to stay
  # up-to-date with the latest depot_tools release.
  "$base_dir/bootstrap/update.sh" "$base_dir/release"
fi

exec "$base_dir/release/gclient.sh" "$@"
