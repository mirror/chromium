import("//build/config/jumbo.gni")
import("//build/config/ui.gni")

jumbo_component("manager") {
  sources = [
    "display_layout_store.cc",
    "display_layout_store.h",
    "display_manager.cc",
    "display_manager.h",
    "display_manager_export.h",
    "display_manager_utilities.cc",
    "display_manager_utilities.h",
    "display_pref_util.h",
    "fake_display_delegate.cc",
    "fake_display_delegate.h",
    "fake_display_snapshot.cc",
    "fake_display_snapshot.h",
    "forwarding_display_delegate.cc",
    "forwarding_display_delegate.h",
    "internal/apply_content_protection_task.cc",
    "internal/apply_content_protection_task.h",
    "internal/configure_displays_task.cc",
    "internal/configure_displays_task.h",
    "internal/default_touch_transform_setter.cc",
    "internal/default_touch_transform_setter.h",
    "internal/display_change_observer.cc",
    "internal/display_change_observer.h",
    "internal/display_configurator.cc",
    "internal/display_configurator.h",
    "internal/display_layout_manager.h",
    "internal/display_util.cc",
    "internal/display_util.h",
    "internal/query_content_protection_task.cc",
    "internal/query_content_protection_task.h",
    "internal/touch_device_manager.cc",
    "internal/touch_device_manager.h",
    "internal/touch_transform_controller.cc",
    "internal/touch_transform_controller.h",
    "internal/touch_transform_setter.h",
    "internal/update_display_configuration_task.cc",
    "internal/update_display_configuration_task.h",
    "json_converter.cc",
    "json_converter.h",
    "managed_display_info.cc",
    "managed_display_info.h",
  ]

  public_deps = [
    "//ui/display",
  ]

  deps = [
    "//base",
    "//third_party/re2",
    "//ui/base",
    "//ui/display/mojo:interfaces",
    "//ui/display/util",
    "//ui/events/devices",
    "//ui/strings",
  ]

  defines = [ "DISPLAY_MANAGER_IMPLEMENTATION" ]

  if (internal_window_mode) {
    defines += [ "INTERNAL_WINDOW_MODE" ]
  }

  if (is_chromeos) {
    deps += [ "//chromeos" ]
  }
}
