group("strings") {
  public_deps = [
    ":autofill_strings",
  ]
}

grit("autofill_strings") {
  source = "../autofill_strings.grd"
  defines = [ "enable_plugins=$enable_plugins" ]

  outputs = [
    "grit/autofill_strings.h",
  ]
  foreach(locale, locales_with_fake_bidi) {
    outputs += [ "autofill_strings_$locale.pak" ]
  }

  if (is_android) {
    outputs += android_autofill_strings_java_resources
  }
}

if (is_android) {
  java_strings_grd_prebuilt("autofill_strings_grd") {
    grit_output_dir = "$root_gen_dir/components/autofill/strings/java/res"
    generated_files =
        rebase_path(android_autofill_strings_java_resources, "java/res", ".")
    deps = [
      ":autofill_strings",
    ]
  }
}
